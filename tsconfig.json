{
  "extends": "astro/tsconfigs/strict",
  "include": [
    ".astro/types.d.ts",
    "**/*"
  ],
  "exclude": [
    "dist"
  ],
  "compilerOptions": {
    "baseUrl": ".",
    "paths": {
      "@styles/*": [
        "src/styles/*"
      ],
      "@lang/*": [
        "src/assets/i18n/*"
      ],
      "@components/*": [
        "src/components/*"
      ],
      "@icons/*": [
        "src/assets/icons/*"
      ],
      "@logos/*": [
        "src/assets/logos/*"
      ],
      "@data/*": [
        "src/assets/data/*"
      ]
    },
    "typeRoots": [
      "src/types",
      "node_modules/@types"
    ]
  }
}

