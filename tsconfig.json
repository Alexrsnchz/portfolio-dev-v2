{
  "extends": "astro/tsconfigs/strict",
  "include": [".astro/types.d.ts", "**/*"],
  "exclude": ["dist"],

  "compilerOptions": {
    "baseUrl": ".",
    "paths": {
      "@styles/*": ["src/styles/*"],
      "@components/*": ["src/components/*"],
      "@icons/*": ["src/assets/icons/*"],
      "@logos/*": ["src/assets/logos/*"],
    },
    "typeRoots": ["src/types", "node_modules/@types"]
  }
}

