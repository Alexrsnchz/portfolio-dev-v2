---
import type { ExperienceProps } from "../../../types/types.ts";

import CalendarIcon from "@icons/general/CalendarIcon.astro";
import BuildingIcon from "@icons/general/BuildingIcon.astro";

const { startDate, endDate, position, company, tasks } = Astro.props as ExperienceProps;
---

<!-- Experience card 1 -->
<div>
    <!-- Timeline dot + experience date -->
    <div class="flex items-center relative my-3 gap-5">
        <div class="absolute -left-1 w-3 h-3 rounded-full bg-purple-500"></div>

        <div class="flex items-center pl-10 gap-2">
            <CalendarIcon class="w-4 h-4 text-gray-500"/>
            <span class="text-sm text-gray-400">{startDate} - {endDate}</span>
        </div>
    </div>

    <!-- Experience content -->
    <div class="pl-10 pb-18 border-l-2 border-purple-500/30">
        <h3 class="text-2xl font-bold text-gray-200">{position}</h3>

        <div class="flex items-center mt-2 mb-8 gap-2">
            <BuildingIcon class="w-5 h-5 text-purple-400"/>
            <span class="text-lg font-semibold bg-gradient-to-r from-purple-500 to-pink-500 bg-clip-text text-transparent">
                {company}
            </span>
        </div>

        <div class="space-y-5">
            {tasks.map((task) => (
                <p class="max-w-xl text-gray-300">
                    â€¢ {task}
                </p>
            ))}
        </div>
    </div>
</div>