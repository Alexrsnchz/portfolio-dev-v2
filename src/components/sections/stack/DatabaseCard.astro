---
import DatabaseIcon from "@icons/general/DatabaseIcon.astro";
import MySQLLogo from "@logos/database/MySQLLogo.astro";
import PostgreSQLLogo from "@logos/database/PostgreSQLLogo.astro";
import SQLiteLogo from "@logos/database/SQLiteLogo.astro";
import PrismaLogo from "@logos/database/PrismaLogo.astro";

const { t } = Astro.props;
---

<article class="p-5 space-y-5 rounded-lg border border-gray-300 dark:border-neutral-700 bg-gray-100/30 dark:bg-neutral-900/30">
    <div class="flex items-center gap-3">
        <div class="p-2 rounded-lg bg-sky-500/10 dark:bg-purple-500/10">
            <DatabaseIcon class="w-7 h-7 text-sky-300 dark:text-purple-400" />
        </div>

        <h3 class="text-xl font-bold bg-gradient-to-r from-sky-300 dark:from-purple-500 via-rose-300 dark:via-pink-500 to-amber-400 dark:to-pink-500 bg-clip-text text-transparent">
            {t.stack.databaseCardTitle}
        </h3>
    </div>

    <div class="grid grid-cols-2 gap-3">
        <div class="flex flex-col items-center py-3 gap-2 w-full rounded-lg bg-gray-300/50 dark:bg-neutral-800/30">
            <div class="p-2 rounded-lg bg-white dark:bg-neutral-700/20">
                <MySQLLogo class="w-8 h-8" />
            </div>

            <span class="text-sm font-medium text-gray-600 dark:text-neutral-400">MySQL</span>
        </div>
        <div class="flex flex-col items-center py-3 gap-2 w-full rounded-lg bg-gray-300/50 dark:bg-neutral-800/30">
            <div class="p-2 rounded-lg bg-white dark:bg-neutral-700/20">
                <PostgreSQLLogo class="w-8 h-8" />
            </div>

            <span class="text-sm font-medium text-gray-600 dark:text-neutral-400">PostgreSQL</span>
        </div>
        <div class="flex flex-col items-center py-3 gap-2 w-full rounded-lg bg-gray-300/50 dark:bg-neutral-800/30">
            <div class="p-2 rounded-lg bg-white dark:bg-neutral-700/20">
                <SQLiteLogo class="w-8 h-8" />
            </div>

            <span class="text-sm font-medium text-gray-600 dark:text-neutral-400">SQLite</span>
        </div>
        <div class="flex flex-col items-center py-3 gap-2 w-full rounded-lg bg-gray-300/50 dark:bg-neutral-800/30">
            <div class="p-2 rounded-lg bg-white dark:bg-neutral-700/20">
                <PrismaLogo class="w-8 h-8 text-black dark:text-white" />
            </div>

            <span class="text-sm font-medium text-gray-600 dark:text-neutral-400">Prisma</span>
        </div>
    </div>
</article>
