---
import ToolIcon from "@icons/general/ToolIcon.astro";
import GitLogo from "@logos/tools/GitLogo.astro";
import GitHubLogo from "@logos/tools/GitHubLogo.astro";
import VSCodeLogo from "@logos/tools/VSCodeLogo.astro";
import WebStormLogo from "@logos/tools/WebStormLogo.astro";
import PostmanLogo from "@logos/tools/PostmanLogo.astro";
import SwaggerLogo from "@logos/tools/SwaggerLogo.astro";

const { t } = Astro.props;
---

<article class="p-5 space-y-5 rounded-lg border border-gray-300 dark:border-neutral-700 bg-gray-100/30 dark:bg-neutral-900/30">
    <div class="flex items-center gap-3">
        <div class="p-2 rounded-lg bg-sky-500/10 dark:bg-purple-500/10">
            <ToolIcon class="w-7 h-7 text-sky-300 dark:text-purple-400" />
        </div>

        <h3 class="text-xl font-bold bg-gradient-to-r from-sky-300 dark:from-purple-500 via-rose-300 dark:via-pink-500 to-amber-400 dark:to-pink-500 bg-clip-text text-transparent">
            {t.stack.toolsCardTitle}
        </h3>
    </div>

    <div class="grid grid-cols-2 gap-3">
        <div class="flex flex-col items-center py-3 gap-2 w-full rounded-lg bg-gray-300/50 dark:bg-neutral-800/30">
            <div class="p-2 rounded-lg bg-white dark:bg-neutral-700/20">
                <GitLogo class="w-8 h-8" />
            </div>

            <span class="text-sm font-medium text-gray-600 dark:text-neutral-400">Git</span>
        </div>
        <div class="flex flex-col items-center py-3 gap-2 w-full rounded-lg bg-gray-300/50 dark:bg-neutral-800/30">
            <div class="p-2 rounded-lg bg-white dark:bg-neutral-700/20">
                <GitHubLogo class="w-8 h-8 text-black dark:text-white" />
            </div>

            <span class="text-sm font-medium text-gray-600 dark:text-neutral-400">GitHub</span>
        </div>
        <div class="flex flex-col items-center py-3 gap-2 w-full rounded-lg bg-gray-300/50 dark:bg-neutral-800/30">
            <div class="p-2 rounded-lg bg-white dark:bg-neutral-700/20">
                <VSCodeLogo class="w-8 h-8" />
            </div>

            <span class="text-sm font-medium text-gray-600 dark:text-neutral-400">VSCode</span>
        </div>
        <div class="flex flex-col items-center py-3 gap-2 w-full rounded-lg bg-gray-300/50 dark:bg-neutral-800/30">
            <div class="p-2 rounded-lg bg-white dark:bg-neutral-700/20">
                <WebStormLogo class="w-8 h-8" />
            </div>

            <span class="text-sm font-medium text-gray-600 dark:text-neutral-400">WebStorm</span>
        </div>
        <div class="flex flex-col items-center py-3 gap-2 w-full rounded-lg bg-gray-300/50 dark:bg-neutral-800/30">
            <div class="p-2 rounded-lg bg-white dark:bg-neutral-700/20">
                <PostmanLogo class="w-8 h-8" />
            </div>

            <span class="text-sm font-medium text-gray-600 dark:text-neutral-400">Postman</span>
        </div>
        <div class="flex flex-col items-center py-3 gap-2 w-full rounded-lg bg-gray-300/50 dark:bg-neutral-800/30">
            <div class="p-2 rounded-lg bg-white dark:bg-neutral-700/20">
                <SwaggerLogo class="w-8 h-8" />
            </div>

            <span class="text-sm font-medium text-gray-600 dark:text-neutral-400">Swagger</span>
        </div>
    </div>
</article>
