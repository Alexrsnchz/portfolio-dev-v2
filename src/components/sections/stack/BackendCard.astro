---
import ServerIcon from "@icons/general/ServerIcon.astro";
import PHPLogo from "@logos/backend/PHPLogo.astro";
import LaravelLogo from "@logos/backend/LaravelLogo.astro";
import NodeLogo from "@logos/backend/NodeLogo.astro";
import ExpressLogo from "@logos/backend/ExpressLogo.astro";
import JavaLogo from "@logos/backend/JavaLogo.astro";
import SpringBootLogo from "@logos/backend/SpringBootLogo.astro";
---

<div class="p-5 space-y-5 rounded-lg border border-neutral-700 bg-neutral-900/30">
    <!-- Card title -->
    <div class="flex items-center gap-3">
        <div class="p-2 rounded-lg bg-neutral-500/20">
            <ServerIcon class="w-7 h-7 text-neutral-400" />
        </div>

        <h3 class="text-xl font-bold text-gray-200">Backend Development</h3>
    </div>

    <!-- Card content -->
    <div class="grid grid-cols-2 gap-3">
        <div class="flex flex-col items-center py-3 gap-2 w-full rounded-lg bg-neutral-800/30">
            <div class="p-2 rounded-lg bg-neutral-700/20">
                <PHPLogo class="w-8 h-8" />
            </div>

            <span class="text-sm font-medium text-neutral-400">PHP</span>
        </div>
        <div class="flex flex-col items-center py-3 gap-2 w-full rounded-lg bg-neutral-800/30">
            <div class="p-2 rounded-lg bg-neutral-700/20">
                <LaravelLogo class="w-8 h-8" />
            </div>

            <span class="text-sm font-medium text-neutral-400">Laravel</span>
        </div>
        <div class="flex flex-col items-center py-3 gap-2 w-full rounded-lg bg-neutral-800/30">
            <div class="p-2 rounded-lg bg-neutral-700/20">
                <NodeLogo class="w-8 h-8" />
            </div>

            <span class="text-sm font-medium text-neutral-400">Node.js</span>
        </div>
        <div class="flex flex-col items-center py-3 gap-2 w-full rounded-lg bg-neutral-800/30">
            <div class="p-2 rounded-lg bg-neutral-700/20">
                <ExpressLogo class="w-8 h-8" />
            </div>

            <span class="text-sm font-medium text-neutral-400">Express.js</span>
        </div>
        <div class="flex flex-col items-center py-3 gap-2 w-full rounded-lg bg-neutral-800/30">
            <div class="p-2 rounded-lg bg-neutral-700/20">
                <JavaLogo class="w-8 h-8" />
            </div>

            <span class="text-sm font-medium text-neutral-400">Java</span>
        </div>
        <div class="flex flex-col items-center py-3 gap-2 w-full rounded-lg bg-neutral-800/30">
            <div class="p-2 rounded-lg bg-neutral-700/20">
                <SpringBootLogo class="w-8 h-8" />
            </div>

            <span class="text-sm font-medium text-neutral-400">Spring Boot</span>
        </div>
    </div>
</div>