---
import GitHubIcon from "@icons/general/GitHubIcon.astro";
import LinkedInIcon from "@icons/general/LinkedInIcon.astro";
import MailIcon from "@icons/general/MailIcon.astro";
---

<div class="border-t border-gray-300 dark:border-neutral-700">
    <div class="flex justify-between px-5 md:px-16 py-5 md:py-8 mx-auto max-w-6xl">
        <!-- Copyright section -->
        <span class="font-medium text-gray-700 dark:text-gray-400">&copy; 2025 Alexrsnchz.</span>

        <!-- Links section -->
        <div class="flex items-center gap-8">
            <a href="https://github.com/Alexrsnchz" aria-label="Go to GitHub profile link" target="_blank" rel="noopener noreferrer">
                <GitHubIcon class="w-5 h-5 text-gray-700 dark:text-gray-400 hover:text-sky-300 dark:hover:text-purple-400 transition-color duration-200 ease-in-out" />
            </a>

            <a href="https://www.linkedin.com/in/alejandroramos7/" aria-label="Go to LinkedIn profile link" target="_blank" rel="noopener noreferrer">
                <LinkedInIcon class="w-5 h-5 text-gray-700 dark:text-gray-400 hover:text-rose-300 dark:hover:text-purple-400 transition-color duration-200 ease-in-out" />
            </a>

            <a href="mailto:alexrsnchz7@gmail.com" aria-label="Send me an email" target="_blank" rel="noopener noreferrer">
                <MailIcon class="w-5 h-5 text-gray-700 dark:text-gray-400 hover:text-amber-400 dark:hover:text-purple-400 transition-color duration-200 ease-in-out" />
            </a>
        </div>
    </div>
</div>